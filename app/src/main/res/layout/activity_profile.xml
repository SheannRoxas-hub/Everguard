<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="VisualLintBounds"
    android:layout_margin="20dp">

    <!-- Top Blue Header -->
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Arrow Icon -->

    <!-- Everguard Logo and Text -->

    <!-- Profile Image -->

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/back_arrow"
        android:src="@drawable/outline_arrow_left_alt_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
       android:id="@+id/everguard_text"
        style="@style/TextAppearance.Everguard.Title.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:text="@string/everguard"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/resized_white_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/sample_pfp"
        android:scaleType="centerCrop"
        android:src="@drawable/pfp"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintVertical_bias="0.6"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

    <!-- Hello User -->
    <TextView
        style="@style/TextAppearance.Everguard.Title.Blue"
        android:id="@+id/helloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sample_user"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />

    <!-- Profile CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardview_expandable_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloUser">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Profile Label -->
                <TextView
                    android:id="@+id/profileLabel"
                    style="@style/TextAppearance.Everguard.Title.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/profile"
                    android:textColor="@color/light_gray"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_icon_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/arrow_down" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/expandable_view_profile"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- Email Label -->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="@string/email"
                    app:drawableStartCompat="@drawable/ic_email_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/expandable_view" />

                <!-- Email Field -->
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="@string/sample_email"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView" />

                <!-- Separator below Email -->
                <View
                    android:id="@+id/emailSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password Label -->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="@string/password"
                    app:drawableStartCompat="@drawable/ic_lock_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailSeparator" />

                <!-- Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    app:boxBackgroundMode="none"
                    android:text="@string/password"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="12dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:text="@string/sample_password"
                        android:textColor="#7C7C7C" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Separator below Password -->
                <View
                    android:id="@+id/passwordSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/password_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Edit Button -->
                <TextView
                    android:id="@+id/edit_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="@string/edit"
                    android:textColor="@color/everguard_blue"
                    android:textStyle="bold"
                    android:padding="8dp"/>

                <!-- Edit CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_profile_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Edit Username Label -->
                        <TextView
                            android:id="@+id/edit_username_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/username"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- Edit Username Field -->
                        <EditText
                            android:id="@+id/edit_username_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_username"/>

                        <!-- Separator Edit Username -->
                        <View
                            android:id="@+id/editUsernameSeparator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/edit_username_input"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Edit Email Label -->
                        <TextView
                            android:id="@+id/edit_email_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/email"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- Edit Email Field -->
                        <EditText
                            android:id="@+id/edit_email_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_email"/>

                        <!-- Separator Edit Email -->
                        <View
                            android:id="@+id/editEmailSeparator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/edit_email_input"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Edit Password Label -->
                        <TextView
                            android:id="@+id/edit_password_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/password"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- Edit Password Field -->
                        <EditText
                            android:id="@+id/edit_password_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_password"/>

                        <!-- Separator Edit Password -->
                        <View
                            android:id="@+id/editPasswordSeparator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/edit_password_input"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <!-- Back Button -->
                        <Button
                            android:id="@+id/back_edit_profile_btn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/back"/>

                        <!-- Update Button -->
                        <Button
                            android:id="@+id/update_profile_changes_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/update"
                            app:cornerRadius="8dp"/>
                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Profile CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardview_expandable_recipientProfile"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_expandable_profile">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!-- Recipient Profile Label -->
                <TextView
                    style="@style/TextAppearance.Everguard.Title.Blue"
                    android:id="@+id/recipientProfileLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/recipient_profile"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/arrow_icon_recipientProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_down" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/expandable_view_recipientProfile"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- First Name label -->
                <TextView
                    android:id="@+id/label_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="@string/recipient_fname"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- First Name Field -->
                <TextView
                    android:id="@+id/recipientFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="Stephen"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_fname" />

                <!-- Separator below First Name -->
                <View
                    android:id="@+id/fnameSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/recipientFname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Last Name label -->
                <TextView
                    android:id="@+id/label_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="@string/recipient_lname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fnameSeparator"/>

                <!-- Last Name Field -->
                <TextView
                    android:id="@+id/recipientLname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="Curry"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_lname" />

                <!-- Separator below Last Name -->
                <View
                    android:id="@+id/lnameSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/recipientLname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Birthday label -->
                <TextView
                    android:id="@+id/label_bdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="Birthday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lnameSeparator"/>

                <!-- Birthday Field -->
                <TextView
                    android:id="@+id/recipientBdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="1987-01-14"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_bdate" />

                <!-- Separator below Birthday -->
                <View
                    android:id="@+id/bdateSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/recipientBdate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Gender label -->
                <TextView
                    android:id="@+id/label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="Gender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bdateSeparator"/>

                <!-- Gender Field -->
                <TextView
                    android:id="@+id/recipientGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="Male"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_gender" />

                <!-- Separator below Gender -->
                <View
                    android:id="@+id/genderSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/recipientGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Mobile Number label -->
                <TextView
                    android:id="@+id/label_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="@string/mobile_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderSeparator"/>

                <!-- Mobile Number Field -->
                <TextView
                    android:id="@+id/recipientContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:drawablePadding="12dp"
                    android:padding="12dp"
                    android:text="0945892371"
                    android:textColor="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_contact" />

                <!-- Separator below Mobile Number -->
                <View
                    android:id="@+id/contactSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:background="#7C7C7C"
                    app:layout_constraintTop_toBottomOf="@id/recipientContact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Edit Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/editRecipientCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Edit Recipient FName Label -->
                        <TextView
                            android:id="@+id/edit_recipientFName_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/recipient_fname"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- Edit Recipient FName Field -->
                        <EditText
                            android:id="@+id/editRecipientFnameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_recipient_fname"/>

                        <!-- Separator -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"/>

                        <!-- Edit Recipient LName Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/recipient_lname"/>

                        <!-- Edit Recipient LName Field -->
                        <EditText
                            android:id="@+id/editRecipientLnameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_recipient_lname"/>

                        <!-- Separator -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"/>

                        <!-- Birthday Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="Birthday"/>

                        <!-- Birthday Field -->
                        <EditText
                            android:id="@+id/editRecipientBdateInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="yyyy-MM-dd"
                            android:inputType="date"/>

                        <!-- Separator -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"/>

                        <!-- Gender Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="Gender"/>

                        <!-- Gender Dropdown -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxBackgroundColor="#F5F5F5"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/editRecipientGenderInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textSize="15sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Separator -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"/>

                        <!-- Mobile Number Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:text="@string/mobile_number"/>

                        <!-- Mobile Number Field -->
                        <EditText
                            android:id="@+id/editRecipientContactInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_mobile_number"
                            android:inputType="phone"/>

                        <!-- Separator -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#7C7C7C"
                            android:layout_marginBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <!-- Back Button -->
                            <Button
                                android:id="@+id/backEditRecipientBtn"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="@string/back"/>

                            <!-- Update Button -->
                            <Button
                                android:id="@+id/updateRecipientChangesBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/update"
                                app:cornerRadius="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>