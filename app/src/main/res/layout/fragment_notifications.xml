<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kebab Menu Button -->
    <ImageButton
        android:id="@+id/home_kebab_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/menu"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black"/>

    <!-- Notification Title -->
    <TextView
        android:id="@+id/NotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/notifications"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NotificationTitle">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NotificationTitle">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/AccidentAlert2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/AlertBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notifications_icon"
                        app:tint="#ff914d"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/AlertTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/accident_alert"
                        android:textColor="#ff914d"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/AlertBell"
                        app:layout_constraintStart_toEndOf="@id/AlertBell"
                        app:layout_constraintTop_toTopOf="@id/AlertBell"/>

                    <TextView
                        android:id="@+id/AlertTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alert_time_30m"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/AlertDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/alert_description"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/AlertBell"
                        app:layout_constraintTop_toBottomOf="@id/AlertBell"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SOS Alert Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/SosBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notifications_icon"
                        app:tint="#dc3030"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/SosTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/SOS_alert"
                        android:textColor="#dc3030"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/SosBell"
                        app:layout_constraintStart_toEndOf="@id/SosBell"
                        app:layout_constraintTop_toTopOf="@id/SosBell"/>

                    <TextView
                        android:id="@+id/SosTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alert_time_1h"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/SosDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/SOS_message"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/SosBell"
                        app:layout_constraintTop_toBottomOf="@id/SosBell"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Low Battery Alert Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/BatteryBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notifications_icon"
                        app:tint="#910000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/BatteryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/low_battery"
                        android:textColor="#910000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/BatteryBell"
                        app:layout_constraintStart_toEndOf="@id/BatteryBell"
                        app:layout_constraintTop_toTopOf="@id/BatteryBell"/>

                    <TextView
                        android:id="@+id/BatteryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alert_time_3h"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/BatteryDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/low_battery_message"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/BatteryBell"
                        app:layout_constraintTop_toBottomOf="@id/BatteryBell"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        <!-- Old Accident Alert Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#fafafa"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#cccccc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/AlertBellOld"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_icon"
                    app:tint="#737373"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/AlertTitleOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/accident_alert"
                    android:textColor="#737373"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/AlertBellOld"
                    app:layout_constraintStart_toEndOf="@id/AlertBellOld"
                    app:layout_constraintTop_toTopOf="@id/AlertBellOld"/>

                <TextView
                    android:id="@+id/AlertTimeOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_time_1d"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/AlertDescriptionOld"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/alert_description"
                    android:textColor="#737373"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/AlertBellOld"
                    app:layout_constraintTop_toBottomOf="@id/AlertBellOld"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Old SOS Alert Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#fafafa"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#cccccc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/SosBellOld"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_icon"
                    app:tint="#737373"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/SosTitleOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/SOS_alert"
                    android:textColor="#737373"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/SosBellOld"
                    app:layout_constraintStart_toEndOf="@id/SosBellOld"
                    app:layout_constraintTop_toTopOf="@id/SosBellOld"/>

                <TextView
                    android:id="@+id/SosTimeOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_time_5d"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/SosDescriptionOld"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/SOS_message"
                    android:textColor="#737373"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/SosBellOld"
                    app:layout_constraintTop_toBottomOf="@id/SosBellOld"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Old Low Battery Alert Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#fafafa"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#cccccc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/BatteryBellOld"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_icon"
                    app:tint="#737373"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/BatteryTitleOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/low_battery"
                    android:textColor="#737373"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/BatteryBellOld"
                    app:layout_constraintStart_toEndOf="@id/BatteryBellOld"
                    app:layout_constraintTop_toTopOf="@id/BatteryBellOld"/>

                <TextView
                    android:id="@+id/BatteryTimeOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_time_5d"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/BatteryDescriptionOld"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/low_battery_message"
                    android:textColor="#737373"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/BatteryBellOld"
                    app:layout_constraintTop_toBottomOf="@id/BatteryBellOld"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/dimOverlay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Detailed Alert Card (Popup) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alertDetailsPopup2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="15dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#fafafa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/AlertBellPop2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_icon"
                    app:tint="#ff914d" />

                <TextView
                    android:id="@+id/AlertTitlePop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accident_alert"
                    android:textColor="#ff914d"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/AlertTimePop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_time_30m"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sample_message"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/sample_location"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCall2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call"
                    app:backgroundTint="#014d86"
                    app:cornerRadius="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="@string/or"
                    android:textColor="#757575" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSms2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_sms"
                    app:backgroundTint="#014d86"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>