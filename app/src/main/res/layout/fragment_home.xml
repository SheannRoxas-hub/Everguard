<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="VisualLintBounds">

    <!-- Top Blue Header -->
    <ImageView
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/sample_pfp"
        android:src="@drawable/pfp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage"/>

    <!-- Hello User -->
    <TextView
        android:id="@+id/helloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginStart="15dp"
        android:text="@string/hello_user"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/home_profileImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Kebab Menu Button -->
    <ImageButton
        android:id="@+id/home_kebab_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/menu"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF"/>

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/home_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_header"
        app:layout_constraintVertical_bias="0.55">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Device Status -->
            <TextView
                android:id="@+id/DeviceStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_status"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/DeviceStatusLabel"/>

            <!-- Battery Icon and Percentage -->
            <ImageView
                android:id="@+id/BatteryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_battery_full"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/BatteryPercent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/BatteryPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Recent Alert Label -->
            <TextView
                android:id="@+id/RecentAlertLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_alert"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <!-- Alert Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/AccidentAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Bell Icon -->
                    <ImageView
                        android:id="@+id/alertIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notifications_icon"
                        app:tint="#ff914d"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Alert Title -->
                    <TextView
                        android:id="@+id/alertTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/accident_alert"
                        android:textColor="#ff914d"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/alertIcon"
                        app:layout_constraintStart_toEndOf="@id/alertIcon"
                        app:layout_constraintTop_toTopOf="@id/alertIcon"/>

                    <!-- Timestamp -->
                    <TextView
                        android:id="@+id/alertTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alert_time_30m"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Description Text -->
                    <TextView
                        android:id="@+id/alertDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/alert_description"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/alertIcon"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- No Alerts Message -->
            <TextView
                android:id="@+id/noAlertsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No recent alerts"
                android:textColor="#999999"
                android:textSize="14sp"
                android:padding="16dp"
                android:visibility="gone"/>

            <!-- Recipient Label -->
            <TextView
                android:id="@+id/RecipientLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/recipient"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <!-- Recipient Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Name -->
                    <TextView
                        android:id="@+id/recipientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipient_name"
                        android:textColor="#014d86"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Age Label -->
                    <TextView
                        android:id="@+id/AgeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/age"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recipientName"/>

                    <!-- Age Value -->
                    <TextView
                        android:id="@+id/recipientAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipient_age"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/AgeLabel"
                        app:layout_constraintStart_toEndOf="@id/AgeLabel"
                        app:layout_constraintTop_toTopOf="@id/AgeLabel"/>

                    <!-- Phone Icon -->
                    <ImageView
                        android:id="@+id/PhoneIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_phone"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="#014d86"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Device Settings Label -->
            <TextView
                android:id="@+id/DeviceSettingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/device_settings"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Device Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fafafa"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#cccccc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/SensitivityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensitivity_label"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <!-- Slider -->
                    <com.google.android.material.slider.Slider
                        android:id="@+id/sensitivitySlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:tickVisible="true"
                        app:thumbColor="#014d86"
                        app:trackColorActive="#014d86"
                        android:valueFrom="50"
                        android:valueTo="100"
                        android:contentDescription="@string/sensitivity_description"
                        app:layout_constraintTop_toBottomOf="@id/SensitivityLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Labels For Slider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/low"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/sensitivitySlider"
                        app:layout_constraintTop_toBottomOf="@id/sensitivitySlider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/sensitivitySlider"
                        app:layout_constraintStart_toStartOf="@id/sensitivitySlider"
                        app:layout_constraintTop_toBottomOf="@id/sensitivitySlider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/high"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/sensitivitySlider"
                        app:layout_constraintTop_toBottomOf="@id/sensitivitySlider"/>

                    <!-- Separator Line -->
                    <View
                        android:id="@+id/deviceSettingsSeparator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="36dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@id/sensitivitySlider"
                        android:layout_marginBottom="8dp"/>

                    <!-- Device Alert Label -->
                    <TextView
                        android:id="@+id/tvDeviceAlertLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/device_alert"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/deviceSettingsSeparator"/>

                    <!-- Test Alert Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestAlert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/test_alert"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="#014d86"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDeviceAlertLabel"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Dim Background Overlay -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Detailed Alert Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alertDetailsPopup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="15dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#fafafa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/AlertBellPop"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_icon"
                    app:tint="#ff914d"/>

                <!-- Alert Title -->
                <TextView
                    android:id="@+id/AlertTitlePop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accident_alert"
                    android:textColor="#ff914d"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/AlertTimePop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_time_30m"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/AlertDescriptionPop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sample_message"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AlertLocationPop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/sample_location"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call"
                    app:backgroundTint="#014d86"
                    app:cornerRadius="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="@string/or"
                    android:textColor="#757575" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_sms"
                    app:backgroundTint="#014d86"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>