<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Global Style for all your Input Fields -->
    <style name="Widget.Everguard.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/everguard_blue_dark</item>
        <item name="hintTextColor">@color/everguard_blue_dark</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">#000000</item>
        <!-- This removes the error icon that overlaps the password eye -->
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.Everguard.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/everguard_blue_dark</item>
        <item name="hintTextColor">@color/everguard_blue_dark</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Everguard.TextInputEditText" parent="@style/Widget.Design.TextInputEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">11dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/rounded_input_bg</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#828282</item>
    </style>

    <style name="InputSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_input_bg</item>
    </style>
</resources>